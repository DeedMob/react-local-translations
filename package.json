  "description": "Miniature Polyglot.js-based i18n for React, keeping translation files local to React components a la CSS Modules. Supports Hooks.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "example"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "test": "ts-node tests/tests.tsx",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeedMob/react-local-translations.git"
  },
  "keywords": [
    "react",
    "hoc",
    "hooks",
    "intl",
    "internationalization",
    "polyglot",
    "i18n"
  ],
  "authors": [
    "David Furlong",
    "Tycho Kaster",
    "Deedmob B.V."
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DeedMob/react-local-translations/issues"
  },
  "homepage": "https://github.com/DeedMob/react-local-translations#readme",
  "peerDependencies": {
    "react": ">=16.8",
    "@types/react": ">=16.8"
  },
  "devDependencies": {
    "@types/react-test-renderer": "^16.8.1",
    "react": "^16.8.4",
    "react-test-renderer": "^16.8.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "typescript": "^4.4.0"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  }
